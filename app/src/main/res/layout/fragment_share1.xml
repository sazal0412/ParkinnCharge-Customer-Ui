<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/intro_lottie_animation_view"
        android:layout_width="350dp"
        android:layout_height="251dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/giftopening" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="323dp"
        android:layout_height="63dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="504dp"
        android:background="@drawable/dashed_rectangle"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="517dp"
        android:text="031323923"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="362dp"
        android:layout_height="122dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="344dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:text="We hope you are enjoying using ParkInnCharge app. Please share your experience with others and earn a scratch card."
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:textColor="#000000"
        android:layout_marginTop="440dp"
        android:gravity="center_horizontal"
        android:text=" Your Referral code is:"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button23"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="108dp"
        android:background="#3283b2"
        android:text="Send invite"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="84dp"
        android:text="Invite your friends to enjoy ParkInnCharge!"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>